            document.getElementById('cosmic-melon').textContent = fruitCounts.cosmic_melon;
            document.getElementById('cosmic-salad').textContent = fruitCounts.cosmic_salad;
        }
        
        function getRandomFruit() {
            const rand = Math.random();
            
            // Verificar se aparece item c√≥smico primeiro (mais raros primeiro)
            if (rand < 0.00001) return 'cosmic_salad';      // 0.001% chance
            if (rand < 0.00011) return 'cosmic_melon';      // 0.01% chance (0.011% - 0.001%)
            if (rand < 0.0023) return 'cosmic_pineapple';   // 0.12% chance (0.23% - 0.11%)
            if (rand < 0.0047) return 'cosmic_strawberry';  // 0.24% chance (0.47% - 0.23%)
            if (rand < 0.0077) return 'cosmic_banana';      // 0.3% chance (0.77% - 0.47%)
            
            // Verificar se aparece item dourado
            if (rand < 0.0177) return 'gold_melon';         // 0.5% chance (1.77% - 0.77%)
            if (rand < 0.0407) return 'gold_coco';         // 2.3% chance (4.07% - 1.77%)
            if (rand < 0.0707) return 'gold_strawberry';   // 3% chance (7.07% - 4.07%)
            if (rand < 0.1107) return 'gold_grape';        // 4% chance (11.07% - 7.07%)
            if (rand < 0.1407) return 'gold_apple';        // 3% chance (14.07% - 11.07%)
            if (rand < 0.1507) return 'gold_pineapple';    // 1% chance (15.07% - 14.07%)
            if (rand < 0.2507) return 'gold_banana';       // 10% chance (25.07% - 15.07%)
            
            // Frutas normais - distribui√ß√£o espec√≠fica: 50% banana, 20% morango, 20% coco, 10% melancia
            const normalRand = Math.random();
            
            if (normalRand < 0.50) return 'banana';     // 50% chance
            if (normalRand < 0.70) return 'strawberry'; // 20% chance (70% - 50%)
            if (normalRand < 0.90) return 'coco';       // 20% chance (90% - 70%)
            if (normalRand < 0.92) return 'apple';      // 2% chance (92% - 90%)
            if (normalRand < 0.94) return 'grape';      // 2% chance (94% - 92%)
            if (normalRand < 0.96) return 'pineapple';  // 2% chance (96% - 94%)
            return 'melon';                             // 4% chance restante (100% - 96%)
        }
        
        function clickFruit() {
            const fruit = getRandomFruit();
            currentFruit = fruit;
            
            const fruitIcon = document.getElementById('fruit-icon');
            fruitIcon.textContent = fruitIcons[fruit];
            fruitIcon.className = 'fruit-icon';
            
            // Adicionar classe de anima√ß√£o para itens especiais
            if (fruit.includes('gold')) {
                fruitIcon.classList.add('golden-item');
            } else if (fruit.includes('cosmic')) {
                fruitIcon.classList.add('cosmic-item');
            }
            
            // Mostrar mensagem de parab√©ns para itens especiais
            if (fruit.includes('gold') || fruit.includes('cosmic')) {
                showCongratulations(fruit);
            }
            
            // Adicionar pontos e incrementar contador
            score += fruitPoints[fruit];
            fruitCounts[fruit]++;
            
            updateScore();
            createParticle();
        }
        
        function showCongratulations(fruitType) {
            const congrats = document.getElementById('congratulations');
            const title = document.getElementById('congrats-title');
            const icon = document.getElementById('congrats-icon');
            const message = document.getElementById('congrats-message');
            
            icon.textContent = fruitIcons[fruitType];
            message.textContent = congratulationsMessages[fruitType];
            
            // Mensagem especial baseada na raridade
            if (fruitType === 'cosmic_salad') {
                title.textContent = "UNIVERSAL!!!";
                title.style.color = "#8A2BE2";
                title.style.fontSize = "4rem";
            } else if (fruitType === 'cosmic_melon') {
                title.textContent = "INTERGAL√ÅCTICO!";
                title.style.color = "#4B0082";
                title.style.fontSize = "3.5rem";
            } else if (fruitType === 'cosmic_pineapple') {
                title.textContent = "GAL√ÅCTICO!";
                title.style.color = "#9370DB";
                title.style.fontSize = "3rem";
            } else if (fruitType === 'cosmic_strawberry') {
                title.textContent = "ESTELAR!";
                title.style.color = "#DA70D6";
                title.style.fontSize = "2.8rem";
            } else if (fruitType === 'cosmic_banana') {
                title.textContent = "C√ìSMICO!";
                title.style.color = "#7B68EE";
                title.style.fontSize = "2.5rem";
            } else if (fruitType === 'gold_melon') {
                title.textContent = "LEND√ÅRIO!";
                title.style.color = "#FFD700";
            } else {
                title.textContent = "PARAB√âNS!";
                title.style.color = "#4CAF50";
            }
            
            congrats.classList.add('show');
        }
        
        function hideCongratulations() {
            document.getElementById('congratulations').classList.remove('show');
        }
        
        function toggleAutoClick() {
            if (autoClickActive) {
                stopAutoClick();
            } else {
                startAutoClick();
            }
        }
        
        function startAutoClick() {
            autoClickActive = true;
            document.getElementById('auto-click-btn').textContent = 'Parar Auto Click';
            document.getElementById('auto-click-indicator').classList.add('active');
            
            autoClickTimer = setInterval(() => {
                clickFruit();
            }, 1000); // 1 click por segundo
        }
        
        function stopAutoClick() {
            autoClickActive = false;
            clearInterval(autoClickTimer);
            document.getElementById('auto-click-btn').textContent = 'Ligar Auto Click';
            document.getElementById('auto-click-indicator').classList.remove('active');
        }
        
        function resetGame() {
            score = 0;
            currentFruit = 'banana';
            
            // Resetar todos os contadores
            for (const fruit in fruitCounts) {
                fruitCounts[fruit] = 0;
            }
            
            document.getElementById('fruit-icon').textContent = fruitIcons.banana;
            document.getElementById('fruit-icon').className = 'fruit-icon';
            
            stopAutoClick();
            updateScore();
            hideCongratulations();
        }
        
        function createParticle() {
            const particles = document.getElementById('particles');
            const particle = document.createElement('div');
            
            const size = Math.random() * 20 + 10;
            const colors = ['#FFD700', '#FF6B6B', '#4CAF50', '#2196F3', '#9C27B0', '#8A2BE2', '#4B0082'];
            
            particle.style.cssText = `
                position: absolute;
                width: ${size}px;
                height: ${size}px;
                background: ${colors[Math.floor(Math.random() * colors.length)]};
                border-radius: 50%;
                pointer-events: none;
                animation: particleAnim 1s ease-out forwards;
            `;
            
            // Posicionar pr√≥ximo √† fruta
            const fruitRect = document.getElementById('fruit-display').getBoundingClientRect();
            particle.style.left = (fruitRect.left + fruitRect.width / 2) + 'px';
            particle.style.top = (fruitRect.top + fruitRect.height / 2) + 'px';
            
            // Anima√ß√£o aleat√≥ria
            const angle = Math.random() * Math.PI * 2;
            const distance = Math.random() * 100 + 50;
            particle.style.setProperty('--end-x', Math.cos(angle) * distance + 'px');
            particle.style.setProperty('--end-y', Math.sin(angle) * distance + 'px');
            
            particles.appendChild(particle);
            
            // Remover ap√≥s anima√ß√£o
            setTimeout(() => {
                particle.remove();
            }, 1000);
        }
        
        // Adicionar CSS para anima√ß√£o de part√≠culas
        const style = document.createElement('style');
        style.textContent = `
            @keyframes particleAnim {
                0% {
                    transform: translate(0, 0) scale(1);
                    opacity: 1;
                }
                100% {
                    transform: translate(var(--end-x), var(--end-y)) scale(0);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
        
        // Event Listeners
        document.getElementById('fruit-display').addEventListener('click', clickFruit);
        document.getElementById('click-btn').addEventListener('click', clickFruit);
        document.getElementById('auto-click-btn').addEventListener('click', toggleAutoClick);
        document.getElementById('reset-btn').addEventListener('click', resetGame);
        
        // Inicializar
        updateScore();
        
        // Tecla espa√ßo para clicar
        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space') {
                clickFruit();
                e.preventDefault();
            }
        });
    </script>
</body>
</html>

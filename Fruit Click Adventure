        function updateScore() {
            document.getElementById('score').textContent = `Pontua√ß√£o: ${score.toLocaleString('pt-BR')}`;
            document.getElementById('banana-count').textContent = fruitCounts.banana;
            document.getElementById('strawberry-count').textContent = fruitCounts.strawberry;
            document.getElementById('coco-count').textContent = fruitCounts.coco;
            document.getElementById('melon-count').textContent = fruitCounts.melon;
            document.getElementById('apple-count').textContent = fruitCounts.apple;
            document.getElementById('grape-count').textContent = fruitCounts.grape;
            document.getElementById('pineapple-count').textContent = fruitCounts.pineapple;
            document.getElementById('gold-banana').textContent = fruitCounts.gold_banana;
            document.getElementById('gold-strawberry').textContent = fruitCounts.gold_strawberry;
            document.getElementById('gold-coco').textContent = fruitCounts.gold_coco;
            document.getElementById('gold-melon').textContent = fruitCounts.gold_melon;
            document.getElementById('gold-apple').textContent = fruitCounts.gold_apple;
